<% provide(:title, 'Create Category') %>

<%= render 'categories_head' %>

<div class="container top-padding">
	<div class="row">
		<div class="col-md-3">
			<%= render 'menu_leftside_categories' %>
		</div>
		<div class="col-md-4 col-md-offset-1">
			<h1>Add a new Category</h1>

			<%= form_for @category, html: { class: "top-margin" } do |f| %>
				<%= render 'shared/error_messages', object: f.object %>

				<div class="form-group">
					<%= f.label :name %>
					<%= f.text_field :name, class: 'form-control', autofocus: :true %>
				</div>
				<%= f.hidden_field :parent_id %>

				<%= f.submit "Create Category", class: "btn btn-danger" %>
				<%= link_to "Cancle", :back, class: "btn btn-default pull-right" %>

			<% end %>

		</div>
	</div>
</div>