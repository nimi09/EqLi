<% provide(:title, "Edit Custom Item") %>

<%= render 'shared/project_profile_head' %>

<% provide(:btntitle, "<span class=\"glyphicon glyphicon-list-alt\"></span> Back to project".html_safe ) %>
<% provide(:link, user_project_path(current_user, @project) ) %>
<%= render 'shared/header_submenu' %>

<div class="container top-padding">
	<div class="row">
		<div class="col-md-3">
			<%= render 'shared/menu_leftside_project' %>
		</div>
		<div class="col-md-9">
			<h2><%= link_to @category.name, user_project_path(current_user, @project) + "/add/" + @category.id.to_s %></h2>
			<div class="col-md-6 col-md-offset-3">
				<h1 class="text-center">Edit Custom Item</h1>
				
				<%= form_for @customitem, url: user_project_category_customitem_path(current_user, @project, @category), method: "put" do |f| %>

					<%= f.hidden_field :project_id %>
					<%= f.hidden_field :category_id %>

					<%= render 'shared/error_messages', object: f.object %>

					<div class="form-group">
						<%= f.label :quantity %>
						<%= f.number_field :quantity, class: 'form-control', autofocus: :true  %>
					</div>

					<div class="form-group">
						<%= f.label :name, "Item" %>
						<%= f.text_field :name, class: 'form-control' %>
					</div>

					<div class="form-group">
						<%= f.label :included_acc, "Included Accessories" %>
						<%= f.text_area :included_acc, size: "30x4", class: 'form-control' %>
					</div>

					<div class="form-group">
						<%= f.label :remark %>
						<%= f.text_area :remark, size: "30x4", class: 'form-control' %>
					</div>
	
					<%= submit_tag "Update", class: "btn btn-danger" %>
					<%= link_to "Cancle", :back, class: "btn btn-default pull-right" %>
				
				<% end %>

			</div>
		</div>
	</div>
</div>
