<% provide(:title, 'Create Project') %>

<%= render 'shared/user_profile_head' %>

<div class="container top-padding">
	<div class="row">
		<div class="col-md-3">
		</div>
		<div class="col-md-4 col-md-offset-1">
			<h1 class="text-center">Create Project</h1>
			<p>&nbsp;</p>

			<%= form_for( [current_user, @project]) do |f| %>
				<%= render 'shared/error_messages', object: f.object %>

				<div class="form-group">
					<%= f.label :title, "Project Title" %>
					<%= f.text_field :title, class: 'form-control', autofocus: :true %>
				</div>

				<div class="form-group">
					<%= f.label :production, "Production Company" %>
					<%= f.text_field :production, class: 'form-control' %>
				</div>

				<div class="form-group">
					<%= f.label :dop, "Director of Photography" %>
					<%= f.text_field :dop, class: 'form-control' %>
				</div>

				<div class="form-group">
					<%= f.label :pickupday, "Pick up date (dd/mm/yyyy)" %>
					<%= f.text_field :pickupday, class: 'datepicker-one form-control', size: "10", maxlength: "10" %>
				</div>

				<div class="form-group">
					<%= f.label :returnday, "Return date (dd/mm/yyyy)" %>
					<%= f.text_field :returnday, class: 'datepicker-two form-control', size: "10", maxlength: "10" %>
				</div>

				<div class="form-group">
					<%= f.label :shootingdays, "Number of shooting days" %>
					<%= f.text_field :shootingdays, class: 'form-control' %>
				</div>

				<%= f.submit "Create Project", class: "btn btn-danger" %>
				<%= link_to "Cancle", :back, class: "btn btn-default pull-right" %>

			<% end %>

		</div>
	</div>
</div>
